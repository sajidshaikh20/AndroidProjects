<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/AppCom_Edit_Text"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:inputType="numberSigned"
        android:hint="  Enter a number"
        android:background="@drawable/edit_text_input"
        app:layout_constraintBottom_toTopOf="@id/AppCom_Button"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/AppCom_Button"
        android:text="Peraminds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/AppCom_Button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/AppCom_Button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Triangle"
        app:layout_constraintBottom_toBottomOf="@+id/AppCom_Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/AppCom_Button"
        app:layout_constraintTop_toTopOf="@+id/AppCom_Button"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/App_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/AppCom_Button" />

</androidx.constraintlayout.widget.ConstraintLayout>