<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".healthform.healthdatashow">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"
        android:backgroundTint="#C6F6F1F1"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/hadding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/Title"
                android:textColor="#F60000"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#3CA68585"
                app:layout_constraintTop_toBottomOf="@id/hadding" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/patientname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:text="Name :"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/edtpatientname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:text="Sajid"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/patientname"
                app:layout_constraintTop_toTopOf="@id/patientname"
                 />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/edtpatientSname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="shaikh"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/edtpatientname"
                app:layout_constraintTop_toTopOf="@id/edtpatientname"
                />



            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/patientnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number:"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/patientname"
                app:layout_constraintTop_toBottomOf="@id/patientname" />



            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/edtpatientnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7415311601"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/edtpatientname"
                app:layout_constraintTop_toBottomOf="@id/edtpatientname"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/healthdob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOB:"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/patientname"
                app:layout_constraintTop_toBottomOf="@+id/patientnumber" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/edtpatientdob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20-08-1998"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/edtpatientnumber"
                app:layout_constraintTop_toBottomOf="@id/edtpatientnumber"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/patientgender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender:"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/healthdob"
                app:layout_constraintTop_toBottomOf="@+id/healthdob" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/edtpatientgender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/edtpatientdob"
                app:layout_constraintTop_toBottomOf="@id/edtpatientdob"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/patientissue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health issue:"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/patientgender"
                app:layout_constraintTop_toBottomOf="@+id/patientgender" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/edtpatientissue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seasonal Fever"
                android:textStyle="bold"
                android:padding="1dp"
                android:background="@drawable/round_corner_text"
                app:layout_constraintStart_toStartOf="@id/edtpatientgender"
                app:layout_constraintTop_toBottomOf="@id/edtpatientgender"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>